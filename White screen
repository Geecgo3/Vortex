-- Create a Frame to cover the screen (if it's not already created)
local frame = Instance.new("Frame")
frame.Size = UDim2.new(1, 0, 1, 0) -- Covers the entire screen
frame.Position = UDim2.new(0, 0, 0, 0)
frame.BackgroundColor3 = Color3.new(1, 1, 1) -- White color
frame.BackgroundTransparency = 0 -- Fully opaque
frame.ZIndex = 1000 -- Ensure it's on top of most UI elements
frame.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Wait for 6 seconds
wait(6)

-- Destroy the frame after 6 seconds
frame:Destroy()
